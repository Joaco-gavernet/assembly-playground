
ORG 1000H
CADENA DB "JOAQUIN"
LAST DB 00H

ORG 3000H
CONCAR: NOP
CMP BYTE PTR [BX], 00H
JZ FIN
LOOP: CMP BYTE PTR [BX], CH
JNZ NEXT
INC AL
MOV BYTE PTR [BX], 58H
NEXT: INC CL
INC BX
CMP BYTE PTR [BX], 00H
JNZ LOOP

FIN: RET

ORG 2000H
MOV AL, 0
MOV CL, 0
MOV CH, 41H ;A
MOV BX, OFFSET CADENA
CALL CONCAR

HLT
END
