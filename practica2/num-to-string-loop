

ORG 1000H
MSJ DB "INGRESE UN NUMERO: "
FIN DB ?
UNO DB "UNO"
XUNO DB ?
DOS DB "DOS"
XDOS DB ?
TRES DB "TRES"
XTRES DB ?

ORG 1500H
NUM DB ?

ORG 2000H
INITIALIZE: MOV DL, 2 ;SETEO BREAK CASE

LOOP: MOV BX, OFFSET MSJ
MOV AL, OFFSET FIN - OFFSET MSJ
INT 7
MOV BX, OFFSET NUM
INT 6 ;lectura del input en NUM

FIRST: CMP NUM, 49
JNZ SECOND
MOV BX, OFFSET UNO
MOV AL, OFFSET XUNO - OFFSET UNO
INT 7
JMP OK

SECOND: CMP NUM, 50
JNZ THIRD
MOV BX, OFFSET DOS
MOV AL, OFFSET XDOS - OFFSET DOS
INT 7
JMP OK

THIRD: CMP NUM, 51
JNZ OK
MOV BX, OFFSET TRES
MOV AL, OFFSET XTRES - OFFSET TRES
INT 7

OK: CMP NUM, 48
JNZ INITIALIZE
DEC DL
JNZ LOOP

INT 0
END
