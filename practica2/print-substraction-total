ORG 1000H
MSJ DB " -> Ingrese primer numero: "
XMSJ DB ?
MSJ2 DB " -> Numero a restar: "
XMSJ2 DB ?
SIGNO DB "-"

ORG 1500H
NUM DB ?
NUM2 DB ?
TOTAL DB ?

ORG 2000H
;DH = NUM
;DL = NUM2
;CL = TOTAL

MOV BX, OFFSET MSJ
MOV AL, OFFSET XMSJ - OFFSET MSJ
INT 7
MOV BX, OFFSET NUM
INT 6
MOV DH, NUM
SUB DH, 30H

MOV BX, OFFSET MSJ2
MOV AL, OFFSET XMSJ2 - OFFSET MSJ2
INT 7
MOV BX, OFFSET NUM2
INT 6
MOV DL, NUM2
SUB DL, 30H

;DH = 5
;DL = 8

CMP DH, DL ;CHECK IF NEGATIVE
JNS POSITIVE

MOV BX, OFFSET SIGNO
MOV AL, 1
INT 7

MOV CL, DL
SUB CL, DH
JMP PRINT

POSITIVE: NOP
MOV CL, DH
SUB CL, DL

PRINT: NOP
ADD CL, 30H
MOV TOTAL, CL
MOV BX, OFFSET TOTAL
MOV AL, 1
INT 7

INT 0
END
