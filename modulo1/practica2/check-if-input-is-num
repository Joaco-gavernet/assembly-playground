ORG 1000H
MSJ DB "INGRESE UN NUMERO: "
FIN DB ?
ERR DB "CARACTER NO VALIDO"
FIN2 DB ?

ORG 1500H
NUM DB ?

ORG 3000H
ES_NUM: NOP 
;BX = INPUT DIRECTION
;DX = RESULT
MOV DL, 00H
CMP BYTE PTR [BX], 30H ; CHECK NUM > 30H
JS RETORNAR
CMP BYTE PTR [BX], 40H ; CHECK NUM < 40H
JNS RETORNAR
MOV DL, 0FFH ; IT IS A NUM
RETORNAR: NOP
RET

ORG 2000H
MOV BX, OFFSET MSJ
MOV AL, OFFSET FIN - OFFSET MSJ
INT 7
MOV BX, OFFSET NUM
INT 6
CALL ES_NUM ;RETURNS DX = 00H IF NOT NUMBER
CMP DX, 00H
JNZ CORRECT
MOV BX, OFFSET ERR
MOV AL, OFFSET FIN2 - OFFSET ERR
INT 7
JMP OK

CORRECT: MOV CL, NUM
MOV AL, 1
INT 7

OK: INT 0
END
